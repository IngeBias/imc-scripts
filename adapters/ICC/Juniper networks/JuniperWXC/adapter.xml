
<adapter name="JuniperWXC">
	<description>Juniper (Peribit) WXC-500, WX-100; OS Version 5.x</description>
	<version>1.0.0</version>
	<services>
		<service name="CLICommon">
			<item type="common">JuniperWXC_Common_CLI.xml</item>
		</service>

		<service name="CleanupParser">
			<item type="parser_definition">JuniperWXC_Cleanup_Parser.xml</item>
			<item type="perl_script">JuniperWXC_Cleanup_Parser_Script.pl</item>
		</service>

		<service name="ConfigBackup">
			<item type="builder_definition">JuniperWXC_Config_Backup_Builder.xml</item>
			<item type="tcl_script">JuniperWXC_Config_Backup_Builder_Script.xml</item>
		</service>

		<service name="ConfigDeploy">
			<item type="builder_definition">JuniperWXC_Config_Deploy_Builder.xml</item>
			<item type="tcl_script">JuniperWXC_Config_Deploy_Builder_Script.xml</item>
		</service>

		<service name="ImageDeploy">
			<item type="builder_definition">JuniperWXC_Image_Deploy_Builder.xml</item>
			<item type="tcl_script">JuniperWXC_Image_Deploy_Builder_Script.xml</item>
		</service>

	</services>
</adapter>

