<?xml version="1.0"?>
<definition>

	<action name="deploy_image">	    
		<step>
			<command name="deploy_image_ftp" description="download image via FTP"/>
		</step>	
	</action>
	
	<action name="set_device_boot">	
        <step>
            <command name="enter_image_dir" description="enter image dir via CLI"/>
        </step>
        <step>
            <command name="install_software" description="install software via CLI"/>
        </step>
        <step>
            <command name="set_device_boot" description="set OS boot order via CLI"/>
        </step>
		<step>
			<command name="delete_image" description="delete device image file"/>
		</step>
    </action>
	
